extends base.pug

block scripts 
     include ../static/index.js

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
    h1#contact Contact Us
    div.container
        form(action="/contact", method="post",Class="myform") 
            input(type="text",Class="myInput",name="name",placeholder="Enter your Name")
            input(type="number",Class="myInput",name="age",placeholder="Enter your Age")
            input(type="number",Class="myInput",name="phno",placeholder="Enter your Phone No.")
            input(type="email",Class="myInput",name="email",placeholder="Enter your E-mail")
            input(type="text",Class="myInput",name="desc",placeholder="Explain your concern")
            button(class="btn")
                | Submit
